<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
/>
<div class="header-announcement">Book with confidence — flexible returns available.</div>
<header class="header">
    <a class="logo flex items-center gap-2" href="/">
        <svg class="icon icon-md" aria-hidden="true"><use href="/images/icons.svg#icon-car"></use></svg>
        <span>LuxRide</span>
    </a>
    <form
      class="header-search"
      role="search"
      method="GET"
      action="/search"
    >
      <svg class="icon icon-md" aria-hidden="true">
        <use href="/images/icons.svg#icon-search"></use>
      </svg>
      <input
        type="search"
        name="q"
        class="header-search__input"
        placeholder="Search products, pages, help…"
        aria-label="Search site"
        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
        autocomplete="off"
      />
    </form>
    <nav class="desktop-nav">
        <ul class="flex items-center">
            <li data-label="home"><a class="hover:text-brand" href="/">Home</a></li>
            <li data-label="gallery"><a class="hover:text-brand" href="/#fleet">Gallery</a></li>
            <!-- categories dropdown removed -->

            <li class="submenu" data-label="company">
                <a class="hover:text-brand" href="#">Company</a>
                <ul class="submenu-list mega">
                    <li class="mega-col">
                        <h4>About LuxRide</h4>
                        <a href="/about">Identity</a>
                        <a href="/blog">Blog</a>
                        <a href="/careers">Careers</a>
                        <a href="/contacts">Contact</a>
                    </li>
                    <li class="mega-col">
                        <h4>Our Services</h4>
                        <a href="/#fleet">Fleet overview</a>
                        <a href="/#pricing">Pricing</a>
                        <a href="/support/visit">Visit showroom</a>
                        <a href="/roadside">Roadside assistance</a>
                    </li>
                    <li class="mega-col">
                        <h4>Booking</h4>
                        <a href="/how-to-book">How to book</a>
                        <a href="/payment-methods">Payment methods</a>
                        <a href="/delivery-returns">Delivery & returns</a>
                        <a href="/faq">FAQ</a>
                    </li>
                    <li class="mega-col">
                        <h4>Follow us</h4>
                        <a href="#">Facebook</a>
                        <a href="#">Instagram</a>
                        <a href="#">LinkedIn</a>
                        <a href="#">X / Twitter</a>
                    </li>
                </ul>
            </li>

            <li class="submenu" data-label="support">
                <a class="hover:text-brand" href="#">Support</a>
                <ul class="submenu-list mega">
                    <li class="mega-col">
                        <h4>Help Center</h4>
                        <a href="/faq">FAQ</a>
                        <a href="/support/email">Email support</a>
                        <a href="/support/phone">Phone support</a>
                        <a href="/support/chat">Live chat</a>
                    </li>
                    <li class="mega-col">
                        <h4>Locations</h4>
                        <a href="/support/visit">Visit our showroom</a>
                        <a href="/contacts">Contact form</a>
                        <a href="/support/visit">Opening hours</a>
                    </li>
                    <li class="mega-col">
                        <h4>Roadside</h4>
                        <a href="/roadside-coverage">Coverage</a>
                        <a href="/roadside-what-to-do">What to do</a>
                        <a href="/roadside-insurance">Insurance</a>
                    </li>
                    <li class="mega-col">
                        <h4>Resources</h4>
                        <a href="/blog">Blog articles</a>
                        <a href="/privacy">Privacy</a>
                        <a href="/terms">Terms</a>
                    </li>
                </ul>
            </li>

            <li class="submenu" data-label="legal">
                <a class="hover:text-brand" href="#">Legal</a>
                <ul class="submenu-list mega">
                    <li class="mega-col">
                        <h4>Policies</h4>
                        <a href="/privacy">Privacy Policy</a>
                        <a href="/cookies">Cookie Policy</a>
                        <a href="/terms">Terms of Service</a>
                    </li>
                    <li class="mega-col">
                        <h4>Compliance</h4>
                        <a href="/privacy">Data access</a>
                        <a href="/privacy">Data deletion</a>
                        <a href="/privacy">GDPR info</a>
                    </li>
                    <li class="mega-col">
                        <h4>Security</h4>
                        <a href="/faq">Report a vulnerability</a>
                        <a href="/responsible-disclosure">Responsible disclosure</a>
                    </li>
                    <li class="mega-col">
                        <h4>More</h4>
                        <a href="/accessibility">Accessibility</a>
                        <a href="/code-of-conduct">Code of conduct</a>
                    </li>
                </ul>
            </li>

            <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
                <li data-label="admin"><a class="hover:text-brand" href="/admin-dashboard">Admin Dashboard</a></li>
                <li data-label="orders"><a class="hover:text-brand" href="/admin/orders">Orders</a></li>
                <li data-label="logout"><a class="hover:text-brand" href="/logout">Logout</a></li>
            <% } else { %>
                <li data-label="login"><a class="hover:text-brand" href="/login">Login</a></li>
            <% } %>
        </ul>
    </nav>
    <div class="header-actions">
        <a href="/support/visit" class="action-btn" aria-label="Visit"><svg class="icon icon-md" aria-hidden="true"><use href="/images/icons.svg#icon-store"></use></svg><span>Visit</span></a>
        <a href="/contacts" class="action-btn" aria-label="Support"><svg class="icon icon-md" aria-hidden="true"><use href="/images/icons.svg#icon-help"></use></svg><span>Help</span></a>
        <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
          <a href="/logout" class="action-btn" aria-label="Logout"><svg class="icon icon-md" aria-hidden="true"><use href="/images/icons.svg#icon-user"></use></svg><span>Logout</span></a>
        <% } else { %>
          <a href="/login" class="action-btn" aria-label="Account"><svg class="icon icon-md" aria-hidden="true"><use href="/images/icons.svg#icon-user"></use></svg><span>Account</span></a>
        <% } %>
    </div>
    <button class="menu-toggle" id="menuToggle" aria-label="Open menu" aria-controls="mobileMenu" aria-expanded="false">
        <svg class="icon icon-md" aria-hidden="true"><use href="/images/icons.svg#icon-menu"></use></svg>
    </button>
</header>
<nav class="mobile-menu" id="mobileMenu" hidden>
    <div class="menu-head">
        <div class="logo flex items-center gap-2">
            <svg class="icon icon-md" aria-hidden="true"><use href="/images/icons.svg#icon-car"></use></svg>
            <span>LuxRide</span>
        </div>
        <button class="menu-close" id="mobileClose" aria-label="Close menu">
            <svg class="icon icon-md" aria-hidden="true"><use href="/images/icons.svg#icon-close"></use></svg>
        </button>
    </div>
    <div class="search-row">
        <svg class="icon icon-md" aria-hidden="true"><use href="/images/icons.svg#icon-search"></use></svg>
        <input id="mobileSearch" type="search" placeholder="Search menu..." aria-label="Search menu" />
    </div>
    <ul class="menu-list">
        <li data-label="home"><a href="/">Home</a></li>
        <li data-label="gallery"><a href="/#fleet">Gallery</a></li>
        <li data-label="pricing"><a href="/#pricing">Pricing</a></li>
        <li class="submenu" data-label="company">
            <button class="submenu-toggle" aria-expanded="false" aria-controls="submenu-company">
                Company
                <svg class="icon icon-md chevron" aria-hidden="true"><use href="/images/icons.svg#icon-chevron-down"></use></svg>
            </button>
            <ul class="submenu-list" id="submenu-company" hidden>
                <li data-label="about"><a href="/about">About</a></li>
                <li data-label="careers"><a href="/careers">Careers</a></li>
                <li data-label="blog"><a href="/blog">Blog</a></li>
            </ul>
        </li>
        <li class="submenu" data-label="support">
            <button class="submenu-toggle" aria-expanded="false" aria-controls="submenu-support">
                Support
                <svg class="icon icon-md chevron" aria-hidden="true"><use href="/images/icons.svg#icon-chevron-down"></use></svg>
            </button>
            <ul class="submenu-list" id="submenu-support" hidden>
                <li data-label="faq"><a href="/faq">FAQ</a></li>
                <li data-label="roadside"><a href="/roadside">Roadside</a></li>
                <li data-label="contacts"><a href="/contacts">Contacts</a></li>
            </ul>
        </li>
        <li class="submenu" data-label="legal">
            <button class="submenu-toggle" aria-expanded="false" aria-controls="submenu-legal">
                Legal
                <svg class="icon icon-md chevron" aria-hidden="true"><use href="/images/icons.svg#icon-chevron-down"></use></svg>
            </button>
            <ul class="submenu-list" id="submenu-legal" hidden>
                <li data-label="terms"><a href="/terms">Terms</a></li>
                <li data-label="privacy"><a href="/privacy">Privacy</a></li>
                <li data-label="cookies"><a href="/cookies">Cookies</a></li>
            </ul>
        </li>
        <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
            <li data-label="admin"><a href="/admin-dashboard">Admin Dashboard</a></li>
            <li data-label="orders"><a href="/admin/orders">Orders</a></li>
            <li data-label="logout"><a href="/logout">Logout</a></li>
        <% } else { %>
            <li data-label="login"><a href="/login">Login</a></li>
        <% } %>
    </ul>
</nav>
<div class="mobile-overlay" aria-hidden="true"></div>